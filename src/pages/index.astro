        flex-direction: column;
        align-items: flex-start;
        gap: 5px;
        min-height: 120px;
        border: none;
      }
      .award-title {
        font-size: 1.5rem;
        font-weight: bold;
      }
      .award-input {
        padding: 8px;
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        font-size: 1rem;
        width: 90%;
        background: transparent;
        transition: border-bottom-color 0.3s ease;
      }
      .award-input:focus {
        outline: none;
        border-bottom-color: #666;
      }
      .inline-input {
        border: none;
        min-width: 3em;
        width: 3em;
        font-size: 1.5rem;
        font-weight: bold;
        padding: 0;
        margin: 0 4px;
        background: transparent;
        font-family: inherit;
        color: inherit;
      }
      .inline-input:focus {
        outline: none;
      }
    </style>
