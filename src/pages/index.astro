---
import PasteImage from '../components/PasteImage.astro';
import { GameAwards } from '../components/GameAwards.astro';


---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My 2024 The "fuck you official TGA" Game Awards</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .main-wrapper {
        width: 100%;
        max-width: 700px;
        margin: 0 auto;
      }
      .header-container {
        display: flex;
        align-items: center;
        padding: 20px;
        background-color: white;
        width: 100%;
        box-sizing: border-box;
      }
      .emoji-container {
        position: relative;
        width: 50px;
        height: 50px;
        margin-right: 10px;
      }
      .emoji {
        position: absolute;
        font-size: 50px;
        z-index: 2;
        top: -10px;
      }
      .tga-icon {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
        opacity: 1;
        /* filter: brightness(0%); */
        /* display: flex; */
        transform: rotate(180deg);
      }
      .divider {
        width: 2px;
        height: 50px;
        background-color: black;
        margin: 0 10px;
      }
      .header-title {
        font-size: 36px;
        font-weight: bold;
        color: black;
      }
      .header-subtitle {
        font-size: 24px;
        font-weight: normal;
        color: gray;
        font-style: italic;
      }
      .container {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        padding: 20px;
        min-height: 100vh;
        box-sizing: border-box;
      }
      .left-pane, .right-pane {
        display: grid;
        grid-template-rows: repeat(7, 1fr);
        gap: 10px;
      }
      .left-pane {
        border: none;
        padding: 0;
      }
      .paste-container {
        /* border: 1px solid #ccc; */
        padding: 10px;
        height: auto;
        min-height: 120px;
      }
      .right-pane > div {
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 5px;
        min-height: 120px;
        border: none;
      }
      .award-title {
        font-size: 1.5rem;
        font-weight: bold;
      }
      .award-input {
        padding: 8px;
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        font-size: 1rem;
        width: 90%;
        background: transparent;
        transition: border-bottom-color 0.3s ease;
      }
      .award-input:focus {
        outline: none;
        border-bottom-color: #666;
      }
      .inline-input {
        border: none;
        width: 2em;
        font-size: 1.5rem;
        font-weight: bold;
        padding: 0;
        margin: 0 4px;
        background: transparent;
        font-family: inherit;
        color: inherit;
      }
      .inline-input:focus {
        
        outline: none;
      }
      .screenshot-btn {
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 10px 20px;
        background-color: #333;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        z-index: 1000;
        font-size: 16px;
      }
      .screenshot-btn:hover {
        background-color: #555;
      }
    </style>
  </head>
  <body>
    <button class="screenshot-btn">下载截图</button>
    <div class="main-wrapper" id="capture">
      <div class="header-container">
        <div class="emoji-container">
          <!-- <div class="emoji">💩</div> -->
          <img src="/tga_icon_2024.svg" alt="TGA Icon" class="tga-icon" />
        </div>
        <div class="divider"></div>
        <div>
          <div class="header-title">我的 2024 年度游戏大奖</div>
          <div class="header-subtitle">My 2024 The "fuck you official TGA" Game Awards</div>
        </div>
      </div>
      <div class="container">
        <div class="left-pane">
          {GameAwards.map(() => (
            <div class="paste-container">
              <PasteImage />
            </div>
          ))}
        </div>
        <div class="right-pane">
          {GameAwards.map((award) => (
            <div>
              <div class="award-title">
                {award.isSpecial ? (
                  <>
                    最<input type="text" class="inline-input" />游戏
                  </>
                ) : (
                  award.title
                )}
              </div>
              <input type="text" class="award-input" placeholder="请输入感想" />
            </div>
          ))}
        </div>
      </div>
    </div>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
    <script>
      const inlineInputs = document.querySelectorAll('.inline-input');
      inlineInputs.forEach(input => {
        input.setAttribute('minLength', '3');
        input.addEventListener('input', function(this: HTMLInputElement) {
        
          const length = Math.max(3, this.value.length);
          this.style.width = length + 'em';
        });
      });
      
      // screenshot
      document.querySelector('.screenshot-btn').addEventListener('click', async function() {
        // 保存所有inline-input的值和元素引用
        const inputs = Array.from(document.querySelectorAll('.inline-input'));
        const inputStates = inputs.map(input => ({
          element: input,
          value: input.value,
          parent: input.parentElement
        }));

        // 临时替换inline-input为纯文本
        inputStates.forEach(({element, value, parent}) => {
          const text = document.createTextNode(`${value}`);
          parent.replaceChild(text, element);
        });

        // 截图
        const canvas = await html2canvas(document.querySelector("#capture"));
        
        // 恢复inline-input
        inputStates.forEach(({element, parent}) => {
          const text = parent.childNodes[1]; // 获取我们刚才创建的文本节点
          parent.replaceChild(element, text);
        });

        // 下载
        const link = document.createElement('a');
        link.download = 'my-tga-awards.png';
        link.href = canvas.toDataURL('image/png');
        link.click();
      });
    </script>
  </body>
</html>