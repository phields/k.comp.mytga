        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .main-wrapper {
        width: 100%;
        max-width: 700px;
        margin: 0 auto;
      }
      .header-container {
        display: flex;
        align-items: center;
        padding: 20px;
        background-color: white;
        width: 100%;
        box-sizing: border-box;
      }
      .emoji {
        font-size: 50px;
        margin-right: 10px;
      }
      .divider {
        width: 2px;
        height: 50px;
        background-color: black;
        margin: 0 10px;
      }
      .header-title {
