        color: gray;
        font-style: italic;
      }
      .container {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        padding: 20px;
        min-height: 100vh;
        box-sizing: border-box;
      }
      .left-pane, .right-pane {
        display: grid;
        grid-template-rows: repeat(7, 1fr);
        gap: 10px;
      }
      .left-pane {
        border: none;
        padding: 0;
      }
      .paste-container {
        /* border: 1px solid #ccc; */
